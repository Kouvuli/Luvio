<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


<!--    Buttons-->
    <style name="settingButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_setting_btn</item>
        <item name="android:background">@null</item>
    </style>

    <style name="profileButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_my_profile_btn</item>
        <item name="android:background">@null</item>
    </style>
<!--Back Button Style-->
    <style name="backButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_back_btn</item>
        <item name="android:background">@null</item>
    </style>
<!--Date Picker Style-->

    <style name="DatePickerStyle" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/primary_1</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

<!--Interests Chip-->
    <style name="ChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/edt_text_background</item>
        <item name="chipStrokeWidth">@dimen/_1sdp</item>
        <item name="chipBackgroundColor">@color/chip_color_background</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:textAppearance">@style/ChipText</item>
    </style>
<!--Personal Page Chip-->
    <style name="ChipText1" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>


    <style name="ChipStyle1" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/primary_1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/ChipText1</item>
    </style>
<!--animation-->
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>

    </style>

<!--    progress bar-->
    <style name="ProgressBarColor" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/primary_1</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">@color/primary_1</item>
        <item name="android:statusBarColor" tools:targetApi='l'>@color/white</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

        <item name="backgroundColor1">#424448</item>
        <item name="backgroundColor2">#424448</item>
        <item name="textColor">#FFFFFF</item>
        <item name="BottomNavi">#848992</item>
        <item name="BottomNaviStroke">#848992</item>
        <item name="Box">#848992</item>
        <item name="BoxStroke">#848992</item>
        <item name="hintColor">#C1C1C1</item>
        <item name="BriefInfoStroke">#424448</item>
        <item name="DateColor">#DADADA</item>
        <item name="BtnColor">#FFFFFF</item>
        <item name="DateSeparator">#686B71</item>
        <item name="ChatBackground">#676A70</item>

    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily = "#9Slide03 Montserrat Medium"
        android:background="@drawable/ic_heart_fab">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager2"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginStart="0dp" />

                <me.relex.circleindicator.CircleIndicator3
                    android:id="@+id/circle_indicator3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:gravity="right" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginHorizontal="@dimen/_24sdp"


                    android:background="@null"
                    android:src="@drawable/ic_back_btn" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/_24sdp"
                android:paddingTop="@dimen/_10sdp"
                android:background="@drawable/rounded_edittext"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txt_personal_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="Malena Leilani, "
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="@dimen/_21ssp"
                        android:textColor="?text"/>
                    <EditText
                        android:id="@+id/txt_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:background="@null"
                        android:text="23"
                        android:textSize="@dimen/_21ssp"
                        android:textColor="?text"/>
                    <ImageView
                        android:id="@+id/img_active_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/ic_active_status"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <!--something about me-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:textSize="@dimen/_14ssp"
                    android:text="Hey guys, This is Malena. I’m here to find someone for hookup. I’m not interested in something serious. I would love to hear your adventurous story."
                    android:textColor="?text"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Sở thích"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="?text"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="@dimen/_8sdp"

                        >
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_1"
                            style="@style/ChipStyle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_16sdp"
                            android:textAlignment="center"
                            android:background="@drawable/background_input"

                            app:chipCornerRadius="@dimen/_10sdp"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="Bóng đá"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_2"
                            style="@style/ChipStyle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_16sdp"
                            android:textAlignment="center"
                            app:chipCornerRadius="@dimen/_10sdp"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="Mua sắm"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_3"
                            style="@style/ChipStyle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_16sdp"
                            android:textAlignment="center"
                            app:chipCornerRadius="@dimen/_10sdp"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="Yoga"/>
                    </com.google.android.material.chip.ChipGroup>


                </LinearLayout>
                <!-- Giới Tính-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Giới Tính"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="?text"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_16ssp"
                        />

                    <TextView
                        android:id="@+id/txt_my_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Name"
                        android:textColor="?text"
                        android:textSize="@dimen/_14ssp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Ngày Sinh"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="?text"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_16ssp"/>
                    <TextView
                        android:id="@+id/txt_my_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="22/10/2012"
                        android:textColor="?text"
                        android:textSize="@dimen/_14ssp" />
                </LinearLayout>
                <!-- Thành phố -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Thành Phố"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="?text"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_16ssp"/>

                    <TextView
                        android:id="@+id/txt_my_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textColor="?text"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="@dimen/_14ssp" />
                </LinearLayout>


                <!-- hình ảnh-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Hình ảnh"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="?text"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_16ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fragment_my_galary1"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="3dp"
                            android:layout_weight=".33" />

                        <ImageView
                            android:id="@+id/fragment_my_galary2"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="3dp"
                            android:layout_weight=".33" />

                        <ImageView
                            android:id="@+id/fragment_my_galary3"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="3dp"
                            android:layout_weight=".33" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent= "true"
        android:orientation="horizontal">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_message_fab"
            app:backgroundTint="@color/white"
            app:fabCustomSize="60dp"
            app:tint ="#4CD5FF"
            app:fabSize="normal" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:src="@drawable/ic_heart_fab"
            app:backgroundTint="@color/white"
            app:fabCustomSize="60dp"
            app:tint ="#FF6666"
            app:fabSize="normal" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"

    android:orientation="vertical"
    android:background="@drawable/ic_heart_fab">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@null"
        android:elevation="0dp">
        <RelativeLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_20sdp"
                android:paddingHorizontal="@dimen/_24sdp"
                android:orientation="horizontal"
               >
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back_btn"
                    android:background="@null" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/ic_setting"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/my_backgroud_image"
                android:layout_width="match_parent"
                android:layout_height="220dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_edittext"
            android:paddingTop="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_24sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText

                    android:id="@+id/txt_my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:background="@null"
                    android:layout_gravity="bottom"
                    android:text="Le Duc Tam"
                    android:textSize="@dimen/_21ssp" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <ImageButton
                    android:id="@+id/btn_my_change_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/ic_change_information_btn"
                    app:tint="@color/black" />
            </LinearLayout>
            <EditText
                android:id="@+id/edt_about_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:textSize="@dimen/_14ssp"
                android:text="Hey guys, This is Malena. I’m here to find someone for hookup. I’m not interested in something serious. I would love to hear your adventurous story." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Sở thích"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacingHorizontal="@dimen/_6sdp"

                    >
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_1"
                        style="@style/ChipStyle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_16sdp"
                        android:textAlignment="center"
                        android:background="@drawable/background_input"

                        app:chipCornerRadius="@dimen/_10sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Bóng đá"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_2"
                        style="@style/ChipStyle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_16sdp"
                        android:textAlignment="center"
                        app:chipCornerRadius="@dimen/_10sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Mua sắm"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_3"
                        style="@style/ChipStyle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_16sdp"
                        android:textAlignment="center"
                        app:chipCornerRadius="@dimen/_10sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Yoga"/>
                </com.google.android.material.chip.ChipGroup>


            </LinearLayout>
            <!-- Giới Tính-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Giới Tính"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_16ssp"
                    />

                <TextView
                    android:id="@+id/txt_my_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Ngày Sinh"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_16ssp"/>
                <TextView
                    android:id="@+id/txt_my_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="22/10/2012"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />
            </LinearLayout>
            <!-- Thành phố -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Thành Phố"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_16ssp"/>

                <TextView
                    android:id="@+id/txt_my_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/_14ssp" />
            </LinearLayout>


            <!-- hình ảnh-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Hình ảnh"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_16ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/fragment_my_galary1"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="3dp"
                        android:layout_weight=".33" />

                    <ImageView
                        android:id="@+id/fragment_my_galary2"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="3dp"
                        android:layout_weight=".33" />

                    <ImageView
                        android:id="@+id/fragment_my_galary3"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="3dp"
                        android:layout_weight=".33" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
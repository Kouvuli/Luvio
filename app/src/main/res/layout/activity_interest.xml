<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="@dimen/_20sdp"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:paddingHorizontal="@dimen/_24sdp"
    tools:context=".activities.SignUp.InterestActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/btnBack"
            style="@style/backButton"
            />
        <TextView
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_25sdp"
            android:text="Sở thích"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"/>
        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:text="Chọn 3 sở thích của bản thân"
            android:fontFamily="@font/montserrat_light"
            android:textColor="@color/black"/>
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="@dimen/_10sdp"

            android:layout_marginTop="@dimen/_10sdp"
            >
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_1"
                style="@style/ChipStyle"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_50sdp"
                android:textSize="@dimen/_16sdp"
                android:textAlignment="center"
                android:background="@drawable/background_input"

                app:chipCornerRadius="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Bóng đá"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_2"
                style="@style/ChipStyle"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_50sdp"
                android:textSize="@dimen/_16sdp"
                android:textAlignment="center"
                app:chipCornerRadius="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Mua sắm"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_3"
                style="@style/ChipStyle"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_50sdp"
                android:textSize="@dimen/_16sdp"
                android:textAlignment="center"
                app:chipCornerRadius="@dimen/_10sdp"

                android:fontFamily="@font/montserrat_bold"
                android:text="Yoga"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_4"
                style="@style/ChipStyle"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_50sdp"
                android:textSize="@dimen/_16sdp"
                android:textAlignment="center"
                app:chipCornerRadius="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Bơi lội"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_5"
                style="@style/ChipStyle"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_50sdp"
                android:textSize="@dimen/_16sdp"
                android:textAlignment="center"
                app:chipCornerRadius="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Bóng rổ"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_6"
                style="@style/ChipStyle"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_50sdp"
                android:textSize="@dimen/_16sdp"
                android:textAlignment="center"
                app:chipCornerRadius="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Karaoke"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_7"
                style="@style/ChipStyle"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_50sdp"
                android:textSize="@dimen/_16sdp"
                android:textAlignment="center"
                app:chipCornerRadius="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Quần vợt"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_8"
                style="@style/ChipStyle"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_50sdp"
                android:textSize="@dimen/_16sdp"
                android:textAlignment="center"
                app:chipCornerRadius="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Nấu ăn"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_9"
                style="@style/ChipStyle"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_50sdp"
                android:textSize="@dimen/_16sdp"
                android:textAlignment="center"
                app:chipCornerRadius="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Đọc sách"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_10"
                style="@style/ChipStyle"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_50sdp"
                android:textSize="@dimen/_16sdp"
                android:textAlignment="center"
                app:chipCornerRadius="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Âm nhạc"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_11"
                style="@style/ChipStyle"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_50sdp"
                android:textSize="@dimen/_16sdp"
                android:textAlignment="center"
                app:chipCornerRadius="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Xem phim"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_12"
                style="@style/ChipStyle"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_50sdp"
                android:textSize="@dimen/_16sdp"
                android:textAlignment="center"
                app:chipCornerRadius="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Nghệ thuật"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_13"
                style="@style/ChipStyle"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_50sdp"
                android:textSize="@dimen/_16sdp"
                android:textAlignment="center"
                app:chipCornerRadius="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Động vật"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_14"
                style="@style/ChipStyle"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_50sdp"
                android:textSize="@dimen/_16sdp"
                android:textAlignment="center"
                app:chipCornerRadius="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Chính trị "/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_15"
                style="@style/ChipStyle"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_50sdp"
                android:textSize="@dimen/_16sdp"
                android:textAlignment="center"
                app:chipCornerRadius="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Du lịch"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_16"
                style="@style/ChipStyle"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_50sdp"
                android:textSize="@dimen/_16sdp"
                android:textAlignment="center"
                app:chipCornerRadius="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Game"/>

        </com.google.android.material.chip.ChipGroup>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_16sdp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/background_sign_in_btn"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Tiếp theo" />
        </FrameLayout>
    </LinearLayout>


</ScrollView>